<html>
<head>
  <title>Decision Maker!</title>
  <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
  <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,300,500,700' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700,300' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Dosis:400,500,700' rel='stylesheet' type='text/css'>
  <link href="templates/stylesheets/style.css" rel="stylesheet">
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <!-- sortable.js -->
  <script src="http://rubaxa.github.io/Sortable/Sortable.js"></script>
  <!-- ng-sortable.js -->
  <script src="http://rubaxa.github.io/Sortable/ng-sortable.js"></script>
  <script src="/javascripts/angularApp.js"></script>
  <style> .glyphicon-thumbs-up { cursor:pointer } </style>
</head>
<body ng-app="decisionMaker" ng-controller="MainCtrl">
  <header class="navbar navbar-default topbar" ng-controller="NavCtrl">
    <a href="#/home" class="pull-left logo"><img src="../images/logo.svg"></a>
    <ul class="nav navbar-nav pull-right">
      <li ng-show="isLoggedIn()"><a href="/#/profile"><img class="icon" src="../images/profile-icon.svg">   {{ currentUser() }}</a></li>
      <li ng-show="isLoggedIn()"><a href="/#/create"><img class="icon" src="../images/add-icon.svg"> New Poll</a></li>
      <li ng-hide="isLoggedIn()"><a href="/#/login"><button class="btn btn-primary"> Log In </button></a></li>
    </ul>
  </header>
  <div>
    <ui-view></ui-view>
  </div>

  <footer class="footer" ng-controller="NavCtrl">
      <div class="container">
        <div id="footerwrap">
          <ul class="footernav">
            <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
            <li ng-show="isLoggedIn()"><a href="/#/create">Create a Poll</a></li>
            <li ng-show="isLoggedIn()"><a href="/#/profile">My Polls</a></li>
            <li><a href="/#/about">About</a></li>
          </ul>
        </div>
      </div>
  <footer>
</body>

<script type="text/ng-template" id="/results.html">
  <div class="pagewrapper-2">
    <div class="page-header">
      <h1>
        {{room.title}}
      </h1>
    </div>
    <div class="decisionresult">
      <div><h2>Final Decision &middot; {{results[0].count}} Votes </h2></div>
      <div><h4>{{results[0].title}}</h4></div>
    </div>
  </div>
</script>

<script type="text/ng-template" id="/rooms.html">
  <div class="doodle-section">
    <div class="section-text">
      <div class="section-title"><h1>Pick-One Poll<h1></div>
      <div class="section-description"><nobr>Select the option that is your #1 choice.</nobr></div>
    </div>
    <div class="section-img">
      <img class="doodle" src="../images/pick-one-doodle.png">
    </div>
  </div>
  <div class="pagewrapper-2">
    <div class="vote-vote-block">
      <div ng-show="message" class="alert alert-warning row">
        <span>{{message}}</span>
      </div>

      <div class="directions">
        <h1>{{room.title}}</h1>
        <h2>Drag and drop to vote on top option</h2>
      </div>
      <div ng-sortable="barConfig">
        <div class="voteoption" ng-repeat="option in vote track by $index">
           <h5>{{option.title}}</h5>
        </div>
      </div>
      <div class="votebuttongroup">
          <button class="btn btn-primary" ng-click="addVote()">Submit Vote</button>
          <a href="#/results/{{room._id}}" class="btn btn-primary">Results</a>
      </div>
    </div>

    <div class="vote-addoption-block">
      <form ng-submit="addRoom()">
        <h3>Add an Option</h3>
           <div ng-sortable="barConfig" class="optionblock">
                  <div ng-repeat="option in new track by $index">
                      <input type="text" class="form-control option" placeholder="Option" ng-model="new[$index]"></input>
                  </div>
            </div>
            <div class="createoptionbutton">
              <img src="../images/add-icon.svg" ng-click="addOption($event)"></i>
            </div>
      </form>
      <div class="votebuttongroup">
        <button class="btn btn-primary" ng-click="submitNewOptions()">Submit Options</button>
      </div>
    </div>
  </div>
</script>

<script type="text/ng-template" id="/create.html">
  <div class="pagewrapper-2">
    <h1>Create a Poll</h1>
    <div class="createroomblock">
        <div class="form-group">

        <input type="title" class="form-control" placeholder="Poll Title" ng-model="title"></input>

        <form ng-submit="addRoom()">
             <div ng-sortable="barConfig" class="optionblock">
                    <div ng-repeat="option in options track by $index">
                        <input type="text" class="form-control option" placeholder="Option" ng-model="options[$index]"></input>
                    </div>
              </div>
              <div class="createoptionbutton">
                <img src="../images/add-icon.svg" ng-click="addOption($event)"></img>
              </div>
        </form>
        </div>
        <div class="createroombutton">
        <button type="submit" ng-click="addRoom()" class="btn btn-primary">Create</button>
        </div>
    </div>

    <div class="roomlist" ng-repeat="room in rooms | reverse">
          <div class="roomtitle">
              <h3>{{room.title}}</h3>
          </div>
          <div class="govote">
              <a href="#/rooms/{{room._id}}"><button class="btn btn-primary">Vote</button></a>
          </div>
    </div>
  </div>
</script>

<script type="text/ng-template" id="/login.html">
  <div class="spacer"></div>
  <div class="pagewrapper-1">
    <h1>Log In</h1>
    <div>New to Myrge? <a class="redlink" href="/#/register">Create an Account</a></div>
    <div ng-show="error" class="alert alert-danger row">
      <span>{{ error.message }}</span>
    </div>

    <form ng-submit="logIn()"
      style="margin-top:30px;">

      <div class="form-group">
        <input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
      </div>
      <div class="form-group">
        <input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
      </div>
      <button type="submit" class="btn btn-primary">Log In</button>
    </form>
  </div>
</script>

<script type="text/ng-template" id="/register.html">
  <div class="spacer"></div>
  <div class="pagewrapper-1">
    <h1>Register</h1>
    <div>Already have an account? <a class="redlink" href="/#/login">Log In</a></div>

    <div ng-show="error" class="alert alert-danger row">
      <span>{{ error.message }}</span>
    </div>

    <form ng-submit="register()"
      style="margin-top:30px;">
      <h3>Register</h3>

      <div class="form-group">
        <input type="text"
        class="form-control"
        placeholder="Username"
        ng-model="user.username"></input>
      </div>
      <div class="form-group">
        <input type="password"
        class="form-control"
        placeholder="Password"
        ng-model="user.password"></input>
      </div>
      <button type="submit" class="btn btn-primary">Register</button>
    </form>
  </div>
</script>

<script type="text/ng-template" id="/profile.html">
  <div class="doodle-section">
    <div class="section-text">
      <div class="section-title"><h1>My Polls<h1></div>
      <div class="section-description">Here are some polls you've created, voted on, or interacted with in the past.</div>
    </div>
    <div class="section-img">
      <img class="doodle" src="../images/my-polls-doodle.png">
    </div>
  </div>
  <div class="spacer"></div>
  <div class="pagewrapper-2">
    <h3>Active Polls</h3>
    <div ng-repeat="room in profile.voted track by $index">
        {{room.title}}
    </div>
    <h3>Created Polls</h3>
    <div ng-repeat="room in profile.created track by $index">
        {{room.title}}
    </div>
  </div>
</script>

<script type="text/ng-template" id="/home.html">
  <div class="doodle-section">
    <div class="section-text">
      <div class="section-title"><h1>Make decisions together.<h1></div>
      <div class="section-description">Weâ€™ll help you and your friends come to a group consensus. Vote on what you want and let us do the rest.</div>
      <a href="/#/create"><button type="submit" class="btn btn-primary">Create A Poll</button></a>
    </div>
    <div class="section-img">
      <img class="doodle" src="../images/home-page-doodle.png">
    </div>
  </div>
</script>


</html>
